@{
    ViewData["Title"] = "Payment Slip Generator";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Payment Slip Generator</h1>
</div>
<form asp-controller="PaymentManager" asp-action="GeneratePaySlip" method="post">
    <div class="form-group">
        <label for="productId" class="col-form-label">What do you want to pay for?</label>
        <select id="productId" name="productId" class="selectpicker">
            <optgroup label="Physical Product">
                <option value="1">Chair</option>
            </optgroup>
            <optgroup label="Books">
                <option value="2">Wuthering Heights</option>
            </optgroup>
            <optgroup label="Memberships">
                <option value="5">Activate/Upgrade Netflix Membership</option>
            </optgroup>
            <optgroup label="Videos">
                <option value="3">Learning to Ski</option>
            </optgroup>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
